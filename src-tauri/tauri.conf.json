{
  "$schema": "https://schema.tauri.app/config/2",
  "productName": "Remit",
  "version": "1.0.1",
  "identifier": "com.osxar.remit",
  "build": {
    "beforeDevCommand": "npm run dev",
    "devUrl": "http://localhost:1420",
    "beforeBuildCommand": "npm run build",
    "frontendDist": "../dist"
  },
  "app": {
    "windows": [
      {
        "title": "Remit",
        "width": 800,
        "height": 600,
        "decorations": false,
        "transparent": false,
        "resizable": true
      }
    ],
    "security": {
      "csp": null
    }
  },
  "bundle": {
    "active": true,
    "targets": "all",
    "icon": [
      "icons/Remit.svg",
      "icons/Remit.png",
      "icons/Remit.ico"
    ]
  }
}
